<% include ../partials/header %>
	<div class="container hd-padding">
		<div class="row">
			<h1 style="text-align: center;">Edit: <%= campground.name %></h1>
			<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
				<div class="form-group">
					<input name="name" class="form-control" type="text" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input name="image" class="form-control" type="text" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<input name="cost" class="form-control" type="number" value="<%= campground.cost %>" min='0' step='5'>
				</div>
				<div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
				</div>
				<div class="form-group">
					<textarea id="description" name="description" rows="8" class="form-control"><%-  campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back!</a>
		</div>
	</div>
<% include ../partials/footer %>
